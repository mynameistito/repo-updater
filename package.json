{
  "name": "repo-updater",
  "version": "0.1.0",
  "description": "CLI tool to mass-update dependencies across multiple git repositories with auto package manager detection (npm, pnpm, yarn, Bun)",
  "type": "module",
  "license": "MIT",
  "author": "mynameistito",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mynameistito/repo-updater.git"
  },
  "bugs": {
    "url": "https://github.com/mynameistito/repo-updater/issues"
  },
  "homepage": "https://github.com/mynameistito/repo-updater#readme",
  "keywords": [
    "bun",
    "npm",
    "pnpm",
    "yarn",
    "dependencies",
    "updater",
    "cli",
    "monorepo",
    "automation",
    "github",
    "package-manager",
    "batch-update"
  ],
  "bin": {
    "repo-updater": "src/cli.ts"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "typecheck": "tsgo --noEmit",
    "start": "bun run src/cli.ts",
    "test": "bun test",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "version": "changeset version"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "better-result": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.9",
    "@typescript/native-preview": "^7.0.0-dev.20260215.1",
    "lefthook": "^2.1.1",
    "ultracite": "^7.2.2"
  }
}
